<%- include ('./partials/header.ejs') %><br>
<%- include ('./partials/navbar.ejs') %><br>

<h2>Travellers List</h2>
<a href="/travellers/add">Add Traveller</a>

<table border = "1">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <!-- <th>Full Name</th> -->
            <th>Origins</th>
            <th>Gender</th>
            <th>Action</th>

        </tr>
    </thead>

    <tbody>
        <% data.forEach (el => { %>
            <tr>
                <td> <%= el.id %> </td>
                <td> <%= el.first_name %> </td>
                <td> <%= el.last_name %> </td>
                <td> <%= el.asal %> </td>
                <td> <%= el.gender %> </td>
                <td>
                    <a href="/travellers/edit/<%= el.id %>">Edit</a>
                    <a href="/travellers/delete/<%= el.id %>">Delete</a>
                    <a href="">See Travel Plan</a>
                </td>
            </tr>

        <% }) %>
    </tbody>

</table>

<%- include ('./partials/footer.ejs') %><br>